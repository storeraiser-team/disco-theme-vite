{
  "editor.formatOnSave": false,
  "[liquid]": {
    "editor.defaultFormatter": "Shopify.theme-check-vscode",
    "editor.formatOnSave": true
  },
  "emeraldwalk.runonsave": {
    "commands": [
      {
        "match": "\\.liquid$",
        "cmd": "${workspaceFolder}/node_modules/.bin/prettier ${file} --write"
      }
    ]
  },
  "files.associations": {
    "*.css": "tailwindcss"
  }
}
